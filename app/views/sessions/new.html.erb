<p>
<div class="item", align="center">
<h2>Login</h2>
<p id="notice"><%= notice %></p>
<%= form_tag create_session_url do %>
  <div>
    <%= text_field_tag :username, "", placeholder: 'Enter Username' %>
  </div>
  <div>
    <%= password_field_tag :password, "", placeholder: 'Enter Password' %>
  </div>
  <%= submit_tag "login" %>
</div>
</p>

<p>
<div class="item", align="center">
<h4>Not a member?</h4>
<nav class="btn"><%= link_to 'Sign up', signup_url %></nav>
<% end -%>
</div>
</p>
