<%= form_for(@meal) do |f| %>
  <% if @meal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

      <ul>
      <% @meal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :user_id %>
  </div>
  <div class="form-inline">
    <%= f.label :restaurant_id, "Restaurant:" %>
    <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %>
  </div>
  <div class="form-inline">
    <%= f.label :dish_id, "Dish:" %>
    <%= f.collection_select :dish_id, Dish.all, :id, :category %>
  </div>
  <div class="form-inline">
    <%= f.label :rating, "Rating:" %>
    <%= f.radio_button :rating, false %><%= f.label :rating, "1" %>
    <%= f.radio_button :rating, false %><%= f.label :rating, "2" %>
    <%= f.radio_button :rating, false %><%= f.label :rating, "3" %>
    <%= f.radio_button :rating, false %><%= f.label :rating, "4" %>
    <%= f.radio_button :rating, false %><%= f.label :rating, "5" %>
  </div>
  <div class="field">
    <%= f.text_area :review, placeholder: 'Write your review here', rows: "3"  %>
  </div>
  <div class="form-inline">
    <%= f.label :picture %>
    <%= f.text_field :picture %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
