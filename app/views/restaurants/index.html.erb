<h2>Restaurants</h2>
<form  class="navbar-search pull-left" action="/restaurants">
  <input type="text" class="search-query span3" placeholder="Search by Restaurant" name="keyword">
  <input type="submit" value='Submit'>
</form> &nbsp;&nbsp;
<a href="/restaurants">Reset search filter</a>
<br>
<br>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Number of Ratings</th>
    <th>Average Rating</th>
  </tr>
  </thead>
  <tbody>
<% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= link_to restaurant.name, restaurant %></td>
    <td><%= restaurant.address %></td>
    <td> <%= restaurant.meals.count %></td>
    <td><%= number_with_precision(restaurant.meals.average(:rating), :precision =>1) %></td>
  </tr>
<% end %>
  </tbody>
</table>

<%= will_paginate @restaurants %>

<br />

<nav class="btn"><%= link_to 'New Restaurant', new_restaurant_path %></nav>

  </div>
</div>
