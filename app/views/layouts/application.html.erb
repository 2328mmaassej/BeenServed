<!DOCTYPE html>
<html>
<head>


  <title>nom nom</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Patrick+Hand+SC' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" />
  <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
  <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>
  <link rel="stylesheet" href="/resources/demos/style.css" />

  <script>
  $(function() {

    $( "#dialog-form" ).dialog({
      autoOpen: false,
      height: 430,
      width: 350,
      modal: true,
      close: function() {
        allFields.val( "" ).removeClass( "ui-state-error" );
      }
    });

    $( "#signup-user" )
      .button()
      .click(function() {
        $( "#dialog-form" ).dialog( "open" );
      });

    $( "#dialog-form-login" ).dialog({
      autoOpen: false,
      height: 240,
      width: 350,
      modal: true,
      close: function() {
        allFields.val( "" ).removeClass( "ui-state-error" );
      }
    });

      $( "#login-user" )
      .button()
      .click(function() {
        $( "#dialog-form-login" ).dialog( "open" );
      });
  });
  </script></head>
<body>

<div id="dialog-form"  title="Sign up">
  <p class="validateTips">All form fields are required.</p>
  <%= render 'users/form' %>
</div>

<div id="dialog-form-login" title="Log in">
  <p class="validateTips">All form fields are required.</p>
  <%= render '/sessions/new_session_partial' %>
</div>

<div class="navbar">
  <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
        <%= link_to image_tag('nomnomlogo2.png', size: '138x93'), meals_url, class: "brand" %>
          <div class="nav-collapse collapse">
            <div class="nav">
          <ul class="nav">
            <li><%= link_to "find a dish", dishes_url %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">browse <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "by restaurant", restaurants_url %></li>
                <li><%= link_to "by dish", dishes_url %></li>
                <li><%= link_to "by recent reviews", meals_url %></li>
              </ul>
            </li>
            <li><%= link_to "write a review", new_meal_url %></li>
          </ul>
          <!-- <form class="navbar-search pull-right" action="">
            <input type="text" class="search-query span3" placeholder="Search by dish or restaurant">
          </form>-->
          <ul class="nav pull-right">
            <% if current_user.present? %>
             <li id="signedin"><%= link_to "my profile", user_url(current_user.id) %></li>
             <li id="signedin"><%= link_to "logout", logout_url %></li>
            <% else %>
            <li id="login-user">log in</li>
            <li id="signup-user">sign up</li>
            <% end %>
            </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

<h3><div class="item", align="center">
  <%= notice %>
</div></h3>
<%= yield %>
</div>
</body>
 </html>



